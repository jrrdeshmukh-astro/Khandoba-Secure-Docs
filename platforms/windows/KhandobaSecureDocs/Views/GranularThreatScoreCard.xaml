<UserControl x:Class="KhandobaSecureDocs.Views.GranularThreatScoreCard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:muxc="using:Microsoft.UI.Xaml.Controls">
    <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" 
            Padding="16" 
            CornerRadius="8">
        <StackPanel Spacing="12">
            <!-- Header with Score and Level -->
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <!-- Left: Level and Score -->
                <StackPanel Grid.Column="0" Spacing="4">
                    <TextBlock Text="Threat Level" 
                               FontSize="12" 
                               Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                    <TextBlock x:Name="ThreatLevelText" 
                               FontSize="28" 
                               FontWeight="Bold"
                               Foreground="{Binding ThreatLevelColor}"/>
                    <TextBlock x:Name="ScoreText" 
                               Text="{Binding ScoreText}" 
                               FontSize="12" 
                               Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                </StackPanel>
                
                <!-- Right: Circular Progress -->
                <Grid Grid.Column="1" Width="100" Height="100">
                    <Ellipse x:Name="ProgressBackground" 
                             Width="100" 
                             Height="100" 
                             Stroke="{ThemeResource ControlStrokeColorDefaultBrush}" 
                             StrokeThickness="10" 
                             Fill="Transparent"/>
                    <Path x:Name="ProgressArc" 
                          StrokeThickness="10" 
                          HorizontalAlignment="Center" 
                          VerticalAlignment="Center"/>
                    <StackPanel HorizontalAlignment="Center" 
                                VerticalAlignment="Center">
                        <TextBlock x:Name="ScoreValueText" 
                                   FontSize="24" 
                                   FontWeight="Bold"
                                   HorizontalAlignment="Center"/>
                        <TextBlock Text="Score" 
                                   FontSize="10" 
                                   Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                   HorizontalAlignment="Center"/>
                    </StackPanel>
                </Grid>
            </Grid>
            
            <!-- Score Trend Indicator -->
            <StackPanel x:Name="TrendPanel" 
                        Orientation="Horizontal" 
                        Spacing="4"
                        Visibility="{Binding TrendVisibility}">
                <TextBlock x:Name="TrendIcon" 
                           FontSize="14" 
                           Foreground="{Binding TrendColor}"/>
                <TextBlock x:Name="TrendText" 
                           Text="{Binding TrendText}" 
                           FontSize="12" 
                           Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
            </StackPanel>
            
            <!-- Details Toggle Button -->
            <Button x:Name="DetailsToggleButton" 
                    Content="{Binding DetailsToggleText}" 
                    HorizontalAlignment="Stretch"
                    Click="DetailsToggleButton_Click"/>
        </StackPanel>
    </Border>
</UserControl>

