<Page x:Class="KhandobaSecureDocs.Views.TransferOwnershipView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock Text="Transfer Ownership" 
                       FontSize="28" 
                       FontWeight="Bold"
                       Margin="0,0,0,10"/>
        </StackPanel>

        <!-- Warning Card -->
        <Border Grid.Row="1" 
                BorderBrush="Red" 
                BorderThickness="1"
                Background="LightCoral"
                CornerRadius="5"
                Padding="15"
                Margin="0,0,0,20">
            <StackPanel Orientation="Horizontal" Spacing="10">
                <SymbolIcon Symbol="Important" 
                            FontSize="24" 
                            Foreground="Red"/>
                <StackPanel>
                    <TextBlock Text="Important" 
                               FontSize="16" 
                               FontWeight="Bold"
                               Margin="0,0,0,5"/>
                    <TextBlock Text="Transferring ownership will remove your access to this vault. The new owner will have full control."
                               FontSize="12"
                               TextWrapping="Wrap"/>
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- Vault Info -->
        <Border Grid.Row="2" 
                BorderBrush="LightGray" 
                BorderThickness="1"
                CornerRadius="5"
                Padding="15"
                Margin="0,0,0,20">
            <StackPanel>
                <TextBlock Text="Vault" 
                           FontSize="14" 
                           Foreground="Gray"
                           Margin="0,0,0,5"/>
                <TextBlock x:Name="VaultNameTextBlock"
                           FontSize="18" 
                           FontWeight="Bold"/>
            </StackPanel>
        </Border>

        <!-- New Owner Name -->
        <StackPanel Grid.Row="3" Margin="0,0,0,15">
            <TextBlock Text="New Owner Name *" 
                       FontSize="16" 
                       FontWeight="SemiBold"
                       Margin="0,0,0,10"/>
            <TextBox x:Name="NewOwnerNameTextBox"
                     PlaceholderText="Enter new owner name"
                     FontSize="16"/>
        </StackPanel>

        <!-- New Owner Email -->
        <StackPanel Grid.Row="4" Margin="0,0,0,15">
            <TextBlock Text="Email (Optional)" 
                       FontSize="16" 
                       FontWeight="SemiBold"
                       Margin="0,0,0,10"/>
            <TextBox x:Name="NewOwnerEmailTextBox"
                     PlaceholderText="Enter email address"
                     FontSize="16"/>
        </StackPanel>

        <!-- New Owner Phone -->
        <StackPanel Grid.Row="5" Margin="0,0,0,15">
            <TextBlock Text="Phone (Optional)" 
                       FontSize="16" 
                       FontWeight="SemiBold"
                       Margin="0,0,0,10"/>
            <TextBox x:Name="NewOwnerPhoneTextBox"
                     PlaceholderText="Enter phone number"
                     FontSize="16"/>
        </StackPanel>

        <!-- Reason -->
        <StackPanel Grid.Row="6" Margin="0,0,0,20">
            <TextBlock Text="Reason for Transfer (Optional)" 
                       FontSize="16" 
                       FontWeight="SemiBold"
                       Margin="0,0,0,10"/>
            <TextBox x:Name="ReasonTextBox"
                     PlaceholderText="Enter reason..."
                     AcceptsReturn="True"
                     TextWrapping="Wrap"
                     MinHeight="100"
                     FontSize="14"/>
        </StackPanel>

        <!-- Transfer Button -->
        <Button Grid.Row="7"
                Content="Transfer Ownership" 
                x:Name="TransferButton"
                Click="OnTransferClick"
                IsEnabled="False"
                Padding="20,10"
                Background="Red"
                Foreground="White"/>

        <!-- Progress Ring -->
        <ProgressRing Grid.Row="0" 
                      Grid.RowSpan="8"
                      x:Name="LoadingRing"
                      IsActive="False"
                      Width="50" 
                      Height="50"
                      HorizontalAlignment="Center"
                      VerticalAlignment="Center"/>
    </Grid>
</Page>
