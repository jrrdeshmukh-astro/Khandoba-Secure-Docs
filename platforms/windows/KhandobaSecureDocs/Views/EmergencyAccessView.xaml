<Page x:Class="KhandobaSecureDocs.Views.EmergencyAccessView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,30">
            <TextBlock Text="Emergency Access" 
                       FontSize="28" 
                       FontWeight="Bold"
                       Margin="0,0,0,10"/>
            <TextBlock x:Name="VaultNameTextBlock"
                       FontSize="16" 
                       Foreground="Gray"/>
        </StackPanel>

        <!-- Warning Card -->
        <Border Grid.Row="1" 
                BorderBrush="Red" 
                BorderThickness="1"
                Background="LightCoral"
                CornerRadius="5"
                Padding="15"
                Margin="0,0,0,20">
            <StackPanel Orientation="Horizontal" Spacing="10">
                <SymbolIcon Symbol="Important" 
                            FontSize="24" 
                            Foreground="Red"/>
                <StackPanel>
                    <TextBlock Text="Emergency Protocol" 
                               FontSize="16" 
                               FontWeight="Bold"
                               Margin="0,0,0,5"/>
                    <TextBlock Text="Only use in genuine emergencies. Requires approval. Access granted for 24 hours."
                               FontSize="12"
                               TextWrapping="Wrap"/>
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- Vault Info -->
        <Border Grid.Row="2" 
                BorderBrush="LightGray" 
                BorderThickness="1"
                CornerRadius="5"
                Padding="15"
                Margin="0,0,0,20">
            <StackPanel>
                <TextBlock Text="Vault" 
                           FontSize="14" 
                           Foreground="Gray"
                           Margin="0,0,0,5"/>
                <TextBlock x:Name="VaultDisplayNameTextBlock"
                           FontSize="18" 
                           FontWeight="Bold"/>
            </StackPanel>
        </Border>

        <!-- Urgency Selection -->
        <StackPanel Grid.Row="3" Margin="0,0,0,20">
            <TextBlock Text="Urgency Level" 
                       FontSize="16" 
                       FontWeight="SemiBold"
                       Margin="0,0,0,10"/>
            <StackPanel Spacing="10">
                <RadioButton Content="Low" 
                             x:Name="LowUrgencyRadio"
                             Tag="low"
                             Checked="OnUrgencyChecked"/>
                <RadioButton Content="Medium" 
                             x:Name="MediumUrgencyRadio"
                             Tag="medium"
                             IsChecked="True"
                             Checked="OnUrgencyChecked"/>
                <RadioButton Content="High" 
                             x:Name="HighUrgencyRadio"
                             Tag="high"
                             Checked="OnUrgencyChecked"/>
                <RadioButton Content="Critical" 
                             x:Name="CriticalUrgencyRadio"
                             Tag="critical"
                             Checked="OnUrgencyChecked"/>
            </StackPanel>
        </StackPanel>

        <!-- Reason -->
        <StackPanel Grid.Row="4" Margin="0,0,0,20">
            <TextBlock Text="Emergency Reason *" 
                       FontSize="16" 
                       FontWeight="SemiBold"
                       Margin="0,0,0,10"/>
            <TextBox x:Name="ReasonTextBox"
                     PlaceholderText="Explain the emergency situation..."
                     AcceptsReturn="True"
                     TextWrapping="Wrap"
                     MinHeight="100"
                     FontSize="14"/>
        </StackPanel>

        <!-- Action Buttons -->
        <StackPanel Grid.Row="6" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right"
                    Spacing="10">
            <Button Content="Cancel" 
                    Click="OnCancelClick"
                    Padding="20,10"/>
            <Button Content="Submit Request" 
                    x:Name="SubmitButton"
                    Click="OnSubmitClick"
                    IsEnabled="False"
                    Padding="20,10"/>
        </StackPanel>

        <!-- Progress Ring -->
        <ProgressRing Grid.Row="0" 
                      Grid.RowSpan="7"
                      x:Name="LoadingRing"
                      IsActive="False"
                      Width="50" 
                      Height="50"
                      HorizontalAlignment="Center"
                      VerticalAlignment="Center"/>
    </Grid>
</Page>
