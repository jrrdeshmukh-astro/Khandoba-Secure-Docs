<Page x:Class="KhandobaSecureDocs.Views.URLDownloadView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock Text="Download from URL" 
                       FontSize="28" 
                       FontWeight="Bold"
                       Margin="0,0,0,10"/>
        </StackPanel>

        <!-- Info Card -->
        <Border Grid.Row="1" 
                BorderBrush="LightBlue" 
                BorderThickness="1"
                Background="LightBlue"
                CornerRadius="5"
                Padding="15"
                Margin="0,0,0,20">
            <StackPanel Orientation="Horizontal" Spacing="10">
                <SymbolIcon Symbol="Info" 
                            FontSize="24" 
                            Foreground="Blue"/>
                <TextBlock Text="Enter a URL to download a file. Supported formats: Images, PDFs, Documents"
                           FontSize="12"
                           TextWrapping="Wrap"
                           VerticalAlignment="Center"/>
            </StackPanel>
        </Border>

        <!-- URL Input -->
        <StackPanel Grid.Row="2" Margin="0,0,0,15">
            <TextBlock Text="URL *" 
                       FontSize="16" 
                       FontWeight="SemiBold"
                       Margin="0,0,0,10"/>
            <TextBox x:Name="UrlTextBox"
                     PlaceholderText="https://example.com/file.pdf"
                     FontSize="16"
                     TextChanged="OnUrlTextChanged"/>
            <TextBlock x:Name="UrlErrorTextBlock"
                       Text="Please enter a valid URL"
                       Foreground="Red"
                       FontSize="12"
                       Margin="0,5,0,0"
                       Visibility="Collapsed"/>
        </StackPanel>

        <!-- File Name Input (Optional) -->
        <StackPanel Grid.Row="3" Margin="0,0,0,20">
            <TextBlock Text="File Name (Optional)" 
                       FontSize="16" 
                       FontWeight="SemiBold"
                       Margin="0,0,0,10"/>
            <TextBox x:Name="FileNameTextBox"
                     PlaceholderText="Leave empty to use URL filename"
                     FontSize="16"/>
        </StackPanel>

        <!-- Action Buttons -->
        <StackPanel Grid.Row="5" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right"
                    Spacing="10">
            <Button Content="Cancel" 
                    Click="OnCancelClick"
                    Padding="20,10"/>
            <Button Content="Download" 
                    x:Name="DownloadButton"
                    Click="OnDownloadClick"
                    IsEnabled="False"
                    Padding="20,10"/>
        </StackPanel>

        <!-- Progress Ring -->
        <ProgressRing Grid.Row="0" 
                      Grid.RowSpan="6"
                      x:Name="LoadingRing"
                      IsActive="False"
                      Width="50" 
                      Height="50"
                      HorizontalAlignment="Center"
                      VerticalAlignment="Center"/>
    </Grid>
</Page>
