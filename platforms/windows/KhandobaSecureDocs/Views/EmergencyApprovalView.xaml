<Page x:Class="KhandobaSecureDocs.Views.EmergencyApprovalView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="20">
            <TextBlock Text="Emergency Approvals" 
                       FontSize="28" 
                       FontWeight="Bold"
                       Margin="0,0,0,10"/>
        </StackPanel>

        <!-- Requests List -->
        <ListView Grid.Row="1" 
                  x:Name="RequestsListView"
                  ItemsSource="{x:Bind ViewModel.PendingRequests, Mode=OneWay}"
                  Margin="20,0,20,0">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Border BorderBrush="LightGray" 
                            BorderThickness="1"
                            CornerRadius="5"
                            Padding="15"
                            Margin="0,5">
                        <StackPanel Spacing="10">
                            <!-- Header -->
                            <StackPanel Orientation="Horizontal" 
                                        HorizontalAlignment="SpaceBetween">
                                <StackPanel>
                                    <TextBlock Text="Emergency Access Request" 
                                               FontSize="18" 
                                               FontWeight="Bold"/>
                                    <TextBlock x:Name="RequestedAtTextBlock"
                                               FontSize="12" 
                                               Foreground="Gray"
                                               Margin="0,5,0,0"/>
                                </StackPanel>
                                <TextBlock x:Name="UrgencyBadge"
                                           Text="{Binding Urgency}"
                                           FontSize="12"
                                           FontWeight="SemiBold"
                                           Padding="10,5"
                                           Background="Orange"
                                           Foreground="White"
                                           HorizontalAlignment="Right"/>
                            </StackPanel>

                            <Separator/>

                            <!-- Reason -->
                            <StackPanel>
                                <TextBlock Text="Reason" 
                                           FontSize="14" 
                                           FontWeight="SemiBold"
                                           Margin="0,0,0,5"/>
                                <TextBlock Text="{Binding Reason}" 
                                           FontSize="14"
                                           TextWrapping="Wrap"/>
                            </StackPanel>

                            <Separator/>

                            <!-- Actions -->
                            <StackPanel Orientation="Horizontal" 
                                        HorizontalAlignment="Right"
                                        Spacing="10">
                                <Button Content="Deny" 
                                        Click="OnDenyClick"
                                        Tag="{Binding}"
                                        Padding="15,8"/>
                                <Button Content="Approve" 
                                        Click="OnApproveClick"
                                        Tag="{Binding}"
                                        Padding="15,8"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <!-- Empty State -->
        <StackPanel Grid.Row="1" 
                    x:Name="EmptyStatePanel"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Visibility="Collapsed">
            <SymbolIcon Symbol="Accept" 
                        FontSize="64" 
                        Foreground="LightGray"
                        Margin="0,0,0,20"/>
            <TextBlock Text="No Pending Requests" 
                       FontSize="24" 
                       FontWeight="Bold"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,10"/>
            <TextBlock Text="All emergency access requests have been processed."
                       FontSize="14"
                       Foreground="Gray"
                       HorizontalAlignment="Center"/>
        </StackPanel>

        <!-- Progress Ring -->
        <ProgressRing Grid.Row="0" 
                      Grid.RowSpan="2"
                      x:Name="LoadingRing"
                      IsActive="False"
                      Width="50" 
                      Height="50"
                      HorizontalAlignment="Center"
                      VerticalAlignment="Center"/>
    </Grid>
</Page>
