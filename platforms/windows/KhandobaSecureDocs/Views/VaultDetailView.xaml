<Page x:Class="KhandobaSecureDocs.Views.VaultDetailView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:vm="using:KhandobaSecureDocs.ViewModels">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="20">
            <TextBlock Text="{x:Bind ViewModel.Vault.Name, Mode=OneWay}" 
                       FontSize="28" 
                       FontWeight="Bold"
                       Margin="0,0,0,10"/>
            <TextBlock Text="{x:Bind ViewModel.Vault.Status, Mode=OneWay}" 
                       FontSize="16" 
                       Foreground="Gray"
                       Margin="0,0,0,20"/>
            
            <StackPanel Orientation="Horizontal" Spacing="10">
                <Button Content="Upload Document" 
                        Click="OnUploadDocumentClick"
                        Padding="15,8"/>
                <Button Content="Search" 
                        Click="OnSearchDocumentsClick"
                        Padding="15,8"/>
                <Button Content="Bulk Operations" 
                        Click="OnBulkOperationsClick"
                        Padding="15,8"/>
                <Button Content="Download from URL" 
                        Click="OnURLDownloadClick"
                        Padding="15,8"/>
                <Button Content="Nominees" 
                        Click="OnNomineesClick"
                        Padding="15,8"/>
                <Button Content="Transfer Ownership" 
                        Click="OnTransferOwnershipClick"
                        Padding="15,8"
                        x:Name="TransferOwnershipButton"
                        Visibility="Collapsed"/>
                <Button Content="Close Vault" 
                        Click="OnCloseVaultClick"
                        Padding="15,8"/>
            </StackPanel>
        </StackPanel>

        <!-- Documents List -->
        <ListView Grid.Row="1" 
                  ItemsSource="{x:Bind ViewModel.Documents, Mode=OneWay}"
                  SelectionMode="Single"
                  ItemClick="OnDocumentClick">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Grid Margin="10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <!-- Icon -->
                        <SymbolIcon Symbol="Document" 
                                    Grid.Column="0"
                                    FontSize="24"
                                    Margin="0,0,15,0"/>
                        
                        <!-- Document Info -->
                        <StackPanel Grid.Column="1">
                            <TextBlock Text="{Binding Name}" 
                                       FontSize="18" 
                                       FontWeight="SemiBold"/>
                            <TextBlock Text="{Binding FileType}" 
                                       FontSize="14" 
                                       Foreground="Gray"/>
                        </StackPanel>
                        
                        <!-- Arrow -->
                        <SymbolIcon Symbol="ChevronRight" 
                                    Grid.Column="2"
                                    Foreground="Gray"/>
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <!-- Loading Indicator -->
        <ProgressRing Grid.Row="1" 
                      IsActive="{x:Bind ViewModel.IsLoading, Mode=OneWay}"
                      Width="50" 
                      Height="50"
                      HorizontalAlignment="Center"
                      VerticalAlignment="Center"/>
    </Grid>
</Page>
