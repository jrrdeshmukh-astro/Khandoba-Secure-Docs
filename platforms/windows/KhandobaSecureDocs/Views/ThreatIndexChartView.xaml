<UserControl x:Class="KhandobaSecureDocs.Views.ThreatIndexChartView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:lvc="using:LiveChartsCore.SkiaSharpView.WinUI">
    <Border Background="LightGray" Padding="16" CornerRadius="8">
        <StackPanel Spacing="16">
            <!-- Header -->
            <StackPanel Orientation="Horizontal" Spacing="10">
                <TextBlock Text="Threat Index Trend" FontSize="18" FontWeight="Bold"/>
                <Border x:Name="ThreatIndexBadge"
                        Background="LightBlue"
                        Padding="8,4"
                        CornerRadius="4"
                        HorizontalAlignment="Right">
                    <StackPanel Orientation="Horizontal" Spacing="4">
                        <TextBlock x:Name="ThreatIndexValue" FontSize="14" FontWeight="Bold"/>
                        <TextBlock x:Name="ThreatLevelText" FontSize="10" FontWeight="Bold"/>
                    </StackPanel>
                </Border>
            </StackPanel>

            <!-- Chart -->
            <lvc:CartesianChart x:Name="ThreatChart"
                                Height="200"
                                Series="{x:Bind Series, Mode=OneWay}">
                <lvc:CartesianChart.XAxes>
                    <lvc:DateTimeAxis LabelFormatter="{x:Bind XAxisFormatter}"/>
                </lvc:CartesianChart.XAxes>
                <lvc:CartesianChart.YAxes>
                    <lvc:NumericAxis MinLimit="0" MaxLimit="100"/>
                </lvc:CartesianChart.YAxes>
            </lvc:CartesianChart>

            <!-- Legend -->
            <StackPanel Orientation="Horizontal" Spacing="20" HorizontalAlignment="Center">
                <StackPanel Orientation="Horizontal" Spacing="4">
                    <Ellipse Width="12" Height="12" Fill="Green"/>
                    <TextBlock Text="Low" FontSize="10"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Spacing="4">
                    <Ellipse Width="12" Height="12" Fill="Yellow"/>
                    <TextBlock Text="Medium" FontSize="10"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Spacing="4">
                    <Ellipse Width="12" Height="12" Fill="Orange"/>
                    <TextBlock Text="High" FontSize="10"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Spacing="4">
                    <Ellipse Width="12" Height="12" Fill="Red"/>
                    <TextBlock Text="Critical" FontSize="10"/>
                </StackPanel>
            </StackPanel>

            <!-- Empty State -->
            <StackPanel x:Name="EmptyStatePanel"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Visibility="Collapsed">
                <TextBlock Text="No threat index data available" 
                           FontSize="14" 
                           Foreground="Gray"
                           HorizontalAlignment="Center"/>
            </StackPanel>
        </StackPanel>
    </Border>
</UserControl>
