<Page x:Class="KhandobaSecureDocs.Views.AntiVaultManagementView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="20">
            <TextBlock Text="Anti-Vaults" FontSize="32" FontWeight="Bold"/>
            <Button Content="+ Create Anti-Vault" 
                    Click="OnCreateAntiVaultClick"
                    Margin="20,0,0,0"
                    HorizontalAlignment="Right"/>
        </StackPanel>

        <!-- Anti-Vaults List -->
        <ListView Grid.Row="1" 
                  x:Name="AntiVaultsListView"
                  ItemsSource="{x:Bind AntiVaults, Mode=OneWay}"
                  SelectionMode="Single"
                  ItemClick="OnAntiVaultClick">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Grid Margin="10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <!-- Shield Icon -->
                        <SymbolIcon Symbol="Shield" 
                                    Grid.Column="0"
                                    FontSize="24"
                                    Foreground="Blue"
                                    Margin="0,0,15,0"/>
                        
                        <!-- Anti-Vault Info -->
                        <StackPanel Grid.Column="1">
                            <TextBlock Text="{Binding Status}" 
                                       FontSize="18" 
                                       FontWeight="SemiBold"/>
                            <TextBlock Text="{Binding MonitoredVaultID, StringFormat='Monitoring: {0}'}" 
                                       FontSize="14" 
                                       Foreground="Gray"/>
                            <TextBlock x:Name="LastUnlockedText"
                                       FontSize="12" 
                                       Foreground="Gray"
                                       Visibility="Collapsed"/>
                        </StackPanel>
                        
                        <!-- Status Badge -->
                        <Border Grid.Column="2"
                                Background="LightGray"
                                Padding="8,4"
                                CornerRadius="4">
                            <TextBlock Text="{Binding Status, Converter={StaticResource StatusToUpperConverter}}" 
                                       FontSize="10" 
                                       FontWeight="Bold"/>
                        </Border>
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <!-- Empty State -->
        <StackPanel Grid.Row="1" 
                    x:Name="EmptyStatePanel"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Visibility="Collapsed">
            <SymbolIcon Symbol="Shield" 
                        FontSize="64"
                        Foreground="LightGray"
                        HorizontalAlignment="Center"
                        Margin="0,0,0,20"/>
            <TextBlock Text="No Anti-Vaults" 
                       FontSize="20" 
                       FontWeight="Bold"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,10"/>
            <TextBlock Text="Create an anti-vault to monitor a vault for fraud detection" 
                       FontSize="14" 
                       Foreground="Gray"
                       HorizontalAlignment="Center"
                       TextWrapping="Wrap"
                       Width="300"
                       Margin="0,0,0,20"/>
            <Button Content="Create Anti-Vault" 
                    Click="OnCreateAntiVaultClick"
                    HorizontalAlignment="Center"/>
        </StackPanel>

        <!-- Loading Indicator -->
        <ProgressRing Grid.Row="1" 
                      x:Name="LoadingRing"
                      IsActive="False"
                      Width="50" 
                      Height="50"
                      HorizontalAlignment="Center"
                      VerticalAlignment="Center"/>
    </Grid>
</Page>
