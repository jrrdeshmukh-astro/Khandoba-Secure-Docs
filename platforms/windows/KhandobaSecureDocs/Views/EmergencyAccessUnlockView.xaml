<Page x:Class="KhandobaSecureDocs.Views.EmergencyAccessUnlockView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,30" HorizontalAlignment="Center">
            <SymbolIcon Symbol="Unlock" 
                        FontSize="64" 
                        Foreground="Blue"
                        Margin="0,0,0,20"/>
            <TextBlock Text="Emergency Access" 
                       FontSize="28" 
                       FontWeight="Bold"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,10"/>
            <TextBlock Text="Enter your emergency access pass code"
                       FontSize="16"
                       Foreground="Gray"
                       HorizontalAlignment="Center"
                       TextWrapping="Wrap"/>
        </StackPanel>

        <!-- Vault Info -->
        <Border Grid.Row="1" 
                BorderBrush="LightGray" 
                BorderThickness="1"
                CornerRadius="5"
                Padding="15"
                Margin="0,0,0,20">
            <StackPanel>
                <TextBlock Text="Vault" 
                           FontSize="14" 
                           Foreground="Gray"
                           Margin="0,0,0,5"/>
                <TextBlock x:Name="VaultNameTextBlock"
                           FontSize="18" 
                           FontWeight="Bold"/>
            </StackPanel>
        </Border>

        <!-- Pass Code Input -->
        <StackPanel Grid.Row="2" Margin="0,0,0,20">
            <TextBlock Text="Pass Code *" 
                       FontSize="16" 
                       FontWeight="SemiBold"
                       Margin="0,0,0,10"/>
            <PasswordBox x:Name="PassCodePasswordBox"
                         PlaceholderText="Enter pass code"
                         FontSize="16"
                         PasswordChanged="OnPassCodeChanged"/>
        </StackPanel>

        <!-- Info Card -->
        <Border Grid.Row="3" 
                BorderBrush="LightBlue" 
                BorderThickness="1"
                Background="LightBlue"
                CornerRadius="5"
                Padding="15"
                Margin="0,0,0,20">
            <StackPanel Orientation="Horizontal" Spacing="10">
                <SymbolIcon Symbol="Info" 
                            FontSize="24" 
                            Foreground="Blue"/>
                <TextBlock Text="Biometric verification is required even with a valid pass code."
                           FontSize="12"
                           TextWrapping="Wrap"
                           VerticalAlignment="Center"/>
            </StackPanel>
        </Border>

        <!-- Action Buttons -->
        <StackPanel Grid.Row="5" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Center"
                    Spacing="10">
            <Button Content="Cancel" 
                    Click="OnCancelClick"
                    Padding="20,10"/>
            <Button Content="Unlock Vault" 
                    x:Name="UnlockButton"
                    Click="OnUnlockClick"
                    IsEnabled="False"
                    Padding="20,10"/>
        </StackPanel>

        <!-- Progress Ring -->
        <ProgressRing Grid.Row="0" 
                      Grid.RowSpan="6"
                      x:Name="LoadingRing"
                      IsActive="False"
                      Width="50" 
                      Height="50"
                      HorizontalAlignment="Center"
                      VerticalAlignment="Center"/>
    </Grid>
</Page>
