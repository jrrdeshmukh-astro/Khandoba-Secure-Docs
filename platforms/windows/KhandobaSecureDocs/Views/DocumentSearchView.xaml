<Page x:Class="KhandobaSecureDocs.Views.DocumentSearchView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Search Bar -->
        <Grid Grid.Row="0" Margin="20,20,20,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <TextBox x:Name="SearchTextBox"
                     PlaceholderText="Search documents..."
                     TextChanged="OnSearchTextChanged"
                     FontSize="16"
                     Padding="10,8"/>
            
            <Button Grid.Column="1"
                    Content="Clear"
                    Click="OnClearSearchClick"
                    Margin="10,0,0,0"
                    Padding="15,8"
                    Visibility="{x:Bind ViewModel.HasSearchText, Mode=OneWay}"/>
        </Grid>

        <!-- Filter Chips -->
        <ScrollViewer Grid.Row="1"
                      HorizontalScrollMode="Auto"
                      HorizontalScrollBarVisibility="Auto"
                      Margin="20,0,20,10">
            <StackPanel Orientation="Horizontal" Spacing="10">
                <ToggleButton Content="All"
                              x:Name="AllFilterButton"
                              IsChecked="True"
                              Click="OnFilterButtonClick"
                              Tag=""
                              Padding="15,8"/>
                <ToggleButton Content="Images"
                              x:Name="ImageFilterButton"
                              Click="OnFilterButtonClick"
                              Tag="image"
                              Padding="15,8"/>
                <ToggleButton Content="PDFs"
                              x:Name="PdfFilterButton"
                              Click="OnFilterButtonClick"
                              Tag="pdf"
                              Padding="15,8"/>
                <ToggleButton Content="Videos"
                              x:Name="VideoFilterButton"
                              Click="OnFilterButtonClick"
                              Tag="video"
                              Padding="15,8"/>
                <ToggleButton Content="Audio"
                              x:Name="AudioFilterButton"
                              Click="OnFilterButtonClick"
                              Tag="audio"
                              Padding="15,8"/>
                <ToggleButton Content="Text"
                              x:Name="TextFilterButton"
                              Click="OnFilterButtonClick"
                              Tag="text"
                              Padding="15,8"/>
            </StackPanel>
        </ScrollViewer>

        <!-- Sort Options -->
        <StackPanel Grid.Row="2" 
                    Orientation="Horizontal" 
                    Margin="20,0,20,10"
                    Spacing="10">
            <TextBlock Text="Sort by:" 
                       VerticalAlignment="Center"
                       FontWeight="SemiBold"/>
            <ComboBox x:Name="SortComboBox"
                      SelectionChanged="OnSortChanged"
                      Width="150">
                <ComboBoxItem Content="Name (A-Z)" Tag="NameAscending" IsSelected="False"/>
                <ComboBoxItem Content="Name (Z-A)" Tag="NameDescending" IsSelected="False"/>
                <ComboBoxItem Content="Date (Newest)" Tag="DateDescending" IsSelected="True"/>
                <ComboBoxItem Content="Date (Oldest)" Tag="DateAscending" IsSelected="False"/>
                <ComboBoxItem Content="Size (Smallest)" Tag="SizeAscending" IsSelected="False"/>
                <ComboBoxItem Content="Size (Largest)" Tag="SizeDescending" IsSelected="False"/>
            </ComboBox>
        </StackPanel>

        <!-- Results List -->
        <ListView Grid.Row="3" 
                  ItemsSource="{x:Bind ViewModel.FilteredDocuments, Mode=OneWay}"
                  SelectionMode="Single"
                  ItemClick="OnDocumentClick"
                  Margin="20,0">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Grid Margin="10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <!-- Icon -->
                        <SymbolIcon x:Name="DocumentIcon"
                                    Grid.Column="0"
                                    Symbol="Document"
                                    FontSize="24"
                                    Margin="0,0,15,0"/>
                        
                        <!-- Document Info -->
                        <StackPanel Grid.Column="1">
                            <TextBlock Text="{Binding Name}" 
                                       FontSize="18" 
                                       FontWeight="SemiBold"/>
                            <TextBlock x:Name="DocumentTypeText"
                                       FontSize="14" 
                                       Foreground="Gray"/>
                            <TextBlock x:Name="DocumentDateText"
                                       FontSize="12" 
                                       Foreground="Gray"
                                       Margin="0,5,0,0"/>
                        </StackPanel>
                        
                        <!-- Arrow -->
                        <SymbolIcon Symbol="ChevronRight" 
                                    Grid.Column="2"
                                    Foreground="Gray"/>
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <!-- Empty State -->
        <StackPanel Grid.Row="3"
                    x:Name="EmptyStatePanel"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Visibility="Collapsed">
            <SymbolIcon Symbol="Search" 
                        FontSize="64" 
                        Foreground="LightGray"
                        Margin="0,0,0,20"/>
            <TextBlock Text="No documents found" 
                       FontSize="24" 
                       FontWeight="Bold"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,10"/>
            <TextBlock Text="Try adjusting your search or filters"
                       FontSize="14"
                       Foreground="Gray"
                       HorizontalAlignment="Center"/>
        </StackPanel>

        <!-- Results Count -->
        <TextBlock Grid.Row="3"
                   x:Name="ResultsCountTextBlock"
                   Text="{x:Bind ViewModel.ResultsCountText, Mode=OneWay}"
                   FontSize="14"
                   Foreground="Gray"
                   Margin="20,10,20,0"
                   VerticalAlignment="Top"
                   HorizontalAlignment="Left"/>
    </Grid>
</Page>
