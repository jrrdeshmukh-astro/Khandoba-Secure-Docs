<Page x:Class="KhandobaSecureDocs.Views.DocumentVersionHistoryView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="20">
            <TextBlock Text="Version History" 
                       FontSize="28" 
                       FontWeight="Bold"
                       Margin="0,0,0,10"/>
        </StackPanel>

        <!-- Document Info Card -->
        <Border Grid.Row="1" 
                BorderBrush="LightGray" 
                BorderThickness="1"
                CornerRadius="5"
                Padding="15"
                Margin="20,0,20,20">
            <StackPanel>
                <TextBlock Text="Document" 
                           FontSize="14" 
                           Foreground="Gray"
                           Margin="0,0,0,5"/>
                <TextBlock x:Name="DocumentNameTextBlock"
                           FontSize="18" 
                           FontWeight="Bold"/>
                <TextBlock x:Name="DocumentTypeTextBlock"
                           FontSize="14" 
                           Foreground="Gray"
                           Margin="0,5,0,0"/>
            </StackPanel>
        </Border>

        <!-- Versions List -->
        <ListView Grid.Row="2" 
                  x:Name="VersionsListView"
                  ItemsSource="{x:Bind ViewModel.Versions, Mode=OneWay}"
                  SelectionMode="Single"
                  ItemClick="OnVersionClick"
                  Margin="20,0">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Grid Margin="10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <StackPanel Grid.Column="0">
                            <StackPanel Orientation="Horizontal" Spacing="10">
                                <TextBlock Text="{Binding VersionNumberText}" 
                                           FontSize="18" 
                                           FontWeight="SemiBold"/>
                                <Border Background="LightBlue" 
                                        Padding="8,4"
                                        CornerRadius="3"
                                        x:Name="CurrentVersionBadge"
                                        Visibility="Collapsed">
                                    <TextBlock Text="Current" 
                                               FontSize="12" 
                                               FontWeight="SemiBold"/>
                                </Border>
                            </StackPanel>
                            <TextBlock Text="{Binding CreatedAtText}" 
                                       FontSize="12" 
                                       Foreground="Gray"
                                       Margin="0,5,0,0"/>
                            <TextBlock Text="{Binding Changes}" 
                                       FontSize="11" 
                                       Foreground="Gray"
                                       Margin="0,5,0,0"
                                       x:Name="ChangesTextBlock"
                                       Visibility="Collapsed"/>
                            <TextBlock Text="{Binding FileSizeText}" 
                                       FontSize="11" 
                                       Foreground="Gray"
                                       Margin="0,5,0,0"/>
                        </StackPanel>
                        
                        <Button Grid.Column="1"
                                Content="Download"
                                Click="OnDownloadVersionClick"
                                Tag="{Binding}"
                                Padding="15,8"
                                x:Name="DownloadVersionButton"
                                Visibility="Visible"/>
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <!-- Empty State -->
        <StackPanel Grid.Row="2"
                    x:Name="EmptyStatePanel"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Visibility="Collapsed">
            <SymbolIcon Symbol="History" 
                        FontSize="64" 
                        Foreground="LightGray"
                        Margin="0,0,0,20"/>
            <TextBlock Text="No Version History" 
                       FontSize="24" 
                       FontWeight="Bold"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,10"/>
            <TextBlock Text="This document has no previous versions"
                       FontSize="14"
                       Foreground="Gray"
                       HorizontalAlignment="Center"/>
        </StackPanel>
    </Grid>
</Page>
