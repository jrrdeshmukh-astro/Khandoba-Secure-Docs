<Page x:Class="KhandobaSecureDocs.Views.NomineeManagementView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="20">
            <TextBlock Text="Nominees" 
                       FontSize="28" 
                       FontWeight="Bold"
                       Margin="0,0,0,10"/>
            <TextBlock x:Name="VaultNameTextBlock"
                       FontSize="16" 
                       Foreground="Gray"/>
        </StackPanel>

        <!-- Nominees List -->
        <ListView Grid.Row="1" 
                  x:Name="NomineesListView"
                  ItemsSource="{x:Bind ViewModel.Nominees, Mode=OneWay}"
                  Margin="20,0,20,0">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Grid Margin="0,5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <!-- Status Icon -->
                        <SymbolIcon Grid.Column="0"
                                    x:Name="StatusIcon"
                                    Symbol="Contact"
                                    FontSize="24"
                                    Margin="0,0,15,0"
                                    VerticalAlignment="Center"/>

                        <!-- Nominee Info -->
                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                            <TextBlock Text="{Binding Name}" 
                                       FontSize="18" 
                                       FontWeight="SemiBold"/>
                            <TextBlock Text="{Binding Email}" 
                                       FontSize="14" 
                                       Foreground="Gray"
                                       Visibility="{Binding Email, Converter={StaticResource NullToVisibilityConverter}}"/>
                            <TextBlock x:Name="StatusTextBlock"
                                       FontSize="12" 
                                       Foreground="Gray"
                                       Margin="0,5,0,0"/>
                        </StackPanel>

                        <!-- Actions -->
                        <Button Grid.Column="2"
                                Content="Remove"
                                Click="OnRemoveNomineeClick"
                                Tag="{Binding}"
                                Padding="15,8"
                                Visibility="{Binding CanRemove, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <!-- Empty State -->
        <StackPanel Grid.Row="1" 
                    x:Name="EmptyStatePanel"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Visibility="Collapsed">
            <SymbolIcon Symbol="Contact2" 
                        FontSize="64" 
                        Foreground="LightGray"
                        Margin="0,0,0,20"/>
            <TextBlock Text="No Nominees" 
                       FontSize="24" 
                       FontWeight="Bold"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,10"/>
            <TextBlock Text="Invite people to access this vault"
                       FontSize="14"
                       Foreground="Gray"
                       HorizontalAlignment="Center"/>
        </StackPanel>

        <!-- Action Buttons -->
        <StackPanel Grid.Row="2" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right"
                    Spacing="10"
                    Margin="20">
            <Button Content="Close" 
                    Click="OnCloseClick"
                    Padding="20,10"/>
            <Button Content="Invite Nominee" 
                    x:Name="InviteButton"
                    Click="OnInviteNomineeClick"
                    Padding="20,10"/>
        </StackPanel>
    </Grid>
</Page>
