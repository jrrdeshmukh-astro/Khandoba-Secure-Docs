<Page x:Class="KhandobaSecureDocs.Views.DocumentUploadView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,30">
            <TextBlock Text="Upload Document" 
                       FontSize="28" 
                       FontWeight="Bold"
                       Margin="0,0,0,10"/>
            <TextBlock x:Name="VaultNameTextBlock" 
                       FontSize="16" 
                       Foreground="Gray"/>
        </StackPanel>

        <!-- Upload Options -->
        <StackPanel Grid.Row="1" Spacing="15" Margin="0,0,0,30">
            <TextBlock Text="Select Source" 
                       FontSize="18" 
                       FontWeight="SemiBold"
                       Margin="0,0,0,10"/>
            
            <!-- Source Options (Camera, Photos) - only for source/both vaults -->
            <StackPanel x:Name="SourceOptionsPanel" Spacing="10">
                <Button x:Name="CameraButton"
                        Content="ðŸ“· Camera (Source)"
                        Click="OnCameraClick"
                        HorizontalAlignment="Stretch"
                        Padding="20,15"
                        FontSize="16">
                    <Button.ToolTip>
                        <ToolTip Content="Take a photo with your camera"/>
                    </Button.ToolTip>
                </Button>
            </StackPanel>

            <!-- Sink Options (Files) - only for sink/both vaults -->
            <StackPanel x:Name="SinkOptionsPanel" Spacing="10">
                <Button x:Name="FilePickerButton"
                        Content="ðŸ“ Files (Sink)"
                        Click="OnFilePickerClick"
                        HorizontalAlignment="Stretch"
                        Padding="20,15"
                        FontSize="16">
                    <Button.ToolTip>
                        <ToolTip Content="Select files from your device"/>
                    </Button.ToolTip>
                </Button>
            </StackPanel>
        </StackPanel>

        <!-- Selected File Info -->
        <Border Grid.Row="2" 
                x:Name="SelectedFileBorder"
                BorderBrush="LightGray" 
                BorderThickness="1"
                CornerRadius="5"
                Padding="15"
                Margin="0,0,0,20">
            <StackPanel>
                <TextBlock Text="Selected File" 
                           FontSize="16" 
                           FontWeight="SemiBold"
                           Margin="0,0,0,10"/>
                <TextBlock x:Name="SelectedFileNameTextBlock" 
                           FontSize="14"/>
                <TextBlock x:Name="SelectedFileSizeTextBlock" 
                           FontSize="12" 
                           Foreground="Gray"
                           Margin="0,5,0,0"/>
            </StackPanel>
        </Border>

        <!-- Progress Bar -->
        <StackPanel Grid.Row="3" 
                    Visibility="{x:Bind ViewModel.IsUploading, Mode=OneWay}">
            <ProgressBar Value="{x:Bind ViewModel.UploadProgress, Mode=OneWay}"
                        Maximum="100"
                        Margin="0,0,0,10"/>
            <TextBlock Text="{x:Bind ViewModel.UploadStatus, Mode=OneWay}"
                       FontSize="14"
                       HorizontalAlignment="Center"/>
        </StackPanel>

        <!-- Action Buttons -->
        <StackPanel Grid.Row="3" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right"
                    Spacing="10"
                    Margin="0,20,0,0">
            <Button Content="Cancel" 
                    Click="OnCancelClick"
                    Padding="20,10"/>
            <Button Content="Upload" 
                    x:Name="UploadButton"
                    Click="OnUploadClick"
                    IsEnabled="{x:Bind ViewModel.CanUpload, Mode=OneWay}"
                    Padding="20,10"/>
        </StackPanel>
    </Grid>
</Page>
