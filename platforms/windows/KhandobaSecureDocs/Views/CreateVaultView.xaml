<Page x:Class="KhandobaSecureDocs.Views.CreateVaultView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid Margin="20">
        <StackPanel Spacing="20" MaxWidth="600">
            <TextBlock Text="Create New Vault" 
                       FontSize="32" 
                       FontWeight="Bold"
                       Margin="0,0,0,20"/>

            <!-- Vault Name -->
            <TextBox x:Name="NameTextBox" 
                     Header="Vault Name"
                     PlaceholderText="Enter vault name"
                     Margin="0,0,0,10"/>

            <!-- Description -->
            <TextBox x:Name="DescriptionTextBox" 
                     Header="Description (Optional)"
                     PlaceholderText="Enter vault description"
                     AcceptsReturn="True"
                     TextWrapping="Wrap"
                     Height="100"
                     Margin="0,0,0,10"/>

            <!-- Key Type -->
            <ComboBox x:Name="KeyTypeComboBox" 
                      Header="Key Type"
                      Margin="0,0,0,10">
                <ComboBoxItem Content="Single Key" Tag="single" IsSelected="True"/>
                <ComboBoxItem Content="Dual Key" Tag="dual"/>
            </ComboBox>

            <!-- Buttons -->
            <StackPanel Orientation="Horizontal" Spacing="10" HorizontalAlignment="Right">
                <Button Content="Cancel" 
                        Click="OnCancelClick"
                        Padding="20,10"/>
                <Button Content="Create Vault" 
                        Click="OnCreateClick"
                        Padding="20,10"
                        Style="{ThemeResource AccentButtonStyle}"/>
            </StackPanel>

            <!-- Loading Indicator -->
            <ProgressRing IsActive="{x:Bind IsLoading, Mode=OneWay}"
                          Width="50" 
                          Height="50"
                          HorizontalAlignment="Center"/>
        </StackPanel>
    </Grid>
</Page>
