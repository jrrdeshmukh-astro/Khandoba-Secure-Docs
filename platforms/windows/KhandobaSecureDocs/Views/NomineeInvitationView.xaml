<Page x:Class="KhandobaSecureDocs.Views.NomineeInvitationView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,30">
            <TextBlock Text="Invite Nominee" 
                       FontSize="28" 
                       FontWeight="Bold"
                       Margin="0,0,0,10"/>
            <TextBlock x:Name="VaultNameTextBlock"
                       FontSize="16" 
                       Foreground="Gray"/>
        </StackPanel>

        <!-- Vault Info -->
        <Border Grid.Row="1" 
                BorderBrush="LightGray" 
                BorderThickness="1"
                CornerRadius="5"
                Padding="15"
                Margin="0,0,0,20">
            <StackPanel>
                <TextBlock Text="Vault" 
                           FontSize="14" 
                           Foreground="Gray"
                           Margin="0,0,0,5"/>
                <TextBlock x:Name="VaultDisplayNameTextBlock"
                           FontSize="18" 
                           FontWeight="Bold"/>
            </StackPanel>
        </Border>

        <!-- Nominee Name -->
        <StackPanel Grid.Row="2" Margin="0,0,0,15">
            <TextBlock Text="Nominee Name *" 
                       FontSize="14" 
                       FontWeight="SemiBold"
                       Margin="0,0,0,5"/>
            <TextBox x:Name="NomineeNameTextBox"
                     PlaceholderText="Enter nominee name"
                     FontSize="16"/>
        </StackPanel>

        <!-- Email -->
        <StackPanel Grid.Row="3" Margin="0,0,0,15">
            <TextBlock Text="Email (Optional)" 
                       FontSize="14" 
                       FontWeight="SemiBold"
                       Margin="0,0,0,5"/>
            <TextBox x:Name="EmailTextBox"
                     PlaceholderText="Enter email address"
                     InputScope="EmailSmtpAddress"
                     FontSize="16"/>
        </StackPanel>

        <!-- Phone -->
        <StackPanel Grid.Row="4" Margin="0,0,0,15">
            <TextBlock Text="Phone (Optional)" 
                       FontSize="14" 
                       FontWeight="SemiBold"
                       Margin="0,0,0,5"/>
            <TextBox x:Name="PhoneTextBox"
                     PlaceholderText="Enter phone number"
                     InputScope="TelephoneNumber"
                     FontSize="16"/>
        </StackPanel>

        <!-- Info Card -->
        <Border Grid.Row="5" 
                BorderBrush="LightBlue" 
                BorderThickness="1"
                Background="LightBlue"
                CornerRadius="5"
                Padding="15"
                Margin="0,0,0,20">
            <StackPanel Orientation="Horizontal" Spacing="10">
                <SymbolIcon Symbol="Info" 
                            FontSize="24" 
                            Foreground="Blue"/>
                <TextBlock Text="The nominee will receive an invitation to access this vault. They'll need to accept the invitation to gain access."
                           FontSize="12"
                           TextWrapping="Wrap"
                           VerticalAlignment="Center"/>
            </StackPanel>
        </Border>

        <!-- Action Buttons -->
        <StackPanel Grid.Row="6" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right"
                    Spacing="10">
            <Button Content="Cancel" 
                    Click="OnCancelClick"
                    Padding="20,10"/>
            <Button Content="Send Invitation" 
                    x:Name="SendButton"
                    Click="OnSendInvitationClick"
                    IsEnabled="False"
                    Padding="20,10"/>
        </StackPanel>

        <!-- Progress Ring -->
        <ProgressRing Grid.Row="0" 
                      Grid.RowSpan="7"
                      x:Name="LoadingRing"
                      IsActive="False"
                      Width="50" 
                      Height="50"
                      HorizontalAlignment="Center"
                      VerticalAlignment="Center"/>
    </Grid>
</Page>
